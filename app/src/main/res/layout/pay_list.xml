<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvpaybillno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvpaypaydt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".90"
        android:textColor="@color/abc_search_url_text_pressed"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvpaypaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tvpaypaydt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".90"
        android:textColor="@color/abc_search_url_text_pressed"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvpaypaidt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tvpaybal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/accent_material_dark" />

    <TextView
        android:id="@+id/tvcmonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>